<Application x:Class="Floatly.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Floatly"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Backgrounds -->
        <SolidColorBrush x:Key="BackgroundDark" Color="#0a0a0f"/>
        <!-- Main background -->
        <SolidColorBrush x:Key="BackgroundSecondary" Color="#1a1a2e"/>
        <!-- Cards / popovers -->
        <SolidColorBrush x:Key="SidebarBg" Color="#60141423"/>
        <!-- Sidebar background -->
        <SolidColorBrush x:Key="BackgroundMuted" Color="#1AFFFFFF"/>
        <!-- Inputs / borders -->

        <!-- Primary / Accent Colors -->
        <SolidColorBrush x:Key="AccentIndigo" Color="#6366f1"/>
        <!-- Primary indigo -->
        <SolidColorBrush x:Key="AccentPurple" Color="#A273FF"/>
        <SolidColorBrush x:Key="AccentPurpleHover" Color="#A273FF"/>
        <!-- Secondary accent -->
        <SolidColorBrush x:Key="AccentDeepIndigo" Color="#4f46e5"/>
        <!-- Charts / highlights -->
        <SolidColorBrush x:Key="AccentGreen" Color="#1DB954"/>
        <!-- Success / active -->
        <SolidColorBrush x:Key="AccentRed" Color="#e22134"/>
        <!-- Error / destructive -->

        <!-- Text -->
        <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
        <!-- Main text -->
        <SolidColorBrush x:Key="SecondaryText" Color="#B7B8CC"/>
        <!-- Muted / secondary text -->
        <SolidColorBrush x:Key="Tranparent" Color="Transparent"/>

        <SolidColorBrush x:Key="NotificationDanger" Color="#EF4444"/>


        <!-- 🌷 Custom ScrollBar Style -->
        <Style x:Key="CustomScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="3"/>
            <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentPurple}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="True"
                                   Focusable="False">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Opacity="0" IsTabStop="False"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Background="{TemplateBinding Foreground}">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Width="8"
                                                        SnapsToDevicePixels="True"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Opacity="0" IsTabStop="False"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#AA7FFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 🌸 Custom ListBoxItem Style -->
        <Style x:Key="CustomListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🌺 Custom Button Style -->
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>

                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#EEFFFFFF"/>
                        <Setter Property="Padding" Value="10"/>
                        <Style.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#AA7C3AED"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>

                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Clickable header -->
                            <ToggleButton
                    x:Name="ToggleButton"
                    IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                    Background="{TemplateBinding Background}"
                    BorderThickness="0">

                                <Border
                        Background="Transparent">
                                    <ContentPresenter
    Content="{TemplateBinding SelectionBoxItem}"
    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
    HorizontalAlignment="Left"
    VerticalAlignment="Center"
    TextElement.Foreground="{TemplateBinding Foreground}"/>



                                </Border>
                            </ToggleButton>

                            <!-- Dropdown -->
                            <Popup
    x:Name="PART_Popup"
    IsOpen="{TemplateBinding IsDropDownOpen}"
    Placement="Bottom"
    Focusable="False"
    PopupAnimation="Fade"
    PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}">

                                <Border
        Background="#20183A"
        CornerRadius="18"
        Padding="6"
        Width="{Binding PlacementTarget.ActualWidth, RelativeSource={RelativeSource AncestorType=Popup}}">

                                    <ScrollViewer MaxHeight="400">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Application.Resources>

</Application>
