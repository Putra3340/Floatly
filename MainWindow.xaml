                                </Rectangle>
                                <TextBlock Text="{Binding Artist}" Foreground="{DynamicResource PrimaryText}" FontSize="28" Grid.Row="1" Margin="0,50,0,0" FontWeight="Bold" Padding="10">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="Black"
BlurRadius="0"
ShadowDepth="3"
Opacity="4"
RenderingBias="Quality" />
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="{Binding ArtistBio}" Foreground="{DynamicResource PrimaryText}" FontSize="16" Grid.Row="1" FontFamily="/Assets/Fonts/Geist/#Geist" Margin="0,85,0,0" TextAlignment="Left" TextWrapping="Wrap" Padding="10,30,10,10">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="Black"
BlurRadius="0"
ShadowDepth="3"
Opacity="4"
RenderingBias="Quality" />
                                    </TextBlock.Effect>
                                </TextBlock>
                                <Rectangle Height="80" Width="Auto" Grid.Row="4">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="/Assets/Images/banner-default.jpg"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock Text="Nothing in the queue.." Height="80" Width="Auto" Grid.Row="4" FontSize="24" Foreground="{DynamicResource PrimaryText}" Margin="45,40,0,0"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

            </Border>
        </Grid>
        <StackPanel Grid.Row="1">
            <Border x:Name="NotificationPanel" BorderBrush="{DynamicResource BackgroundMuted}" BorderThickness="1" Height="80" Width="500" HorizontalAlignment="Right" Background="{DynamicResource AccentRed}" Opacity="60" CornerRadius="10" Margin="0,0,-500,0">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly"
         HorizontalAlignment="Left">
                    <TextBlock x:Name="NotificationText"
               Text="This is a notification!"
               Foreground="{DynamicResource PrimaryText}"
               FontSize="24"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               TextWrapping="Wrap"
               Margin="20,0,20,0"/>
                </Viewbox>


            </Border>
            <StackPanel Height="40" Width="40" HorizontalAlignment="Right" Background="{DynamicResource Tranparent}"  Margin="0,-80,10,0">
                <Grid>
                    <Button Content="" Width="40" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="CollapsePlayerCard_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentDeepIndigo}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <!-- Close button at the right -->
                    <Border x:Name="Icon_CollapsePlayerCard" Width="40" Height="40" Background="White" VerticalAlignment="Center" IsHitTestVisible="False">
                        <Border.OpacityMask>
                            <ImageBrush ImageSource="/Assets/Images/icon-close.png"/>
                        </Border.OpacityMask>
                    </Border>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>