<Window x:Class="Floatly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Floatly"
        mc:Ignorable="d"
        Title="Floatly" Height="720" Width="1280" Closed="Window_Closed"
        AllowsTransparency="True"
        WindowStyle="None">

    <Grid Background="{DynamicResource BackgroundDark}" Visibility="Visible">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- TITLE BAR -->
        <Border Background="{DynamicResource SidebarBg}" Height="40" MouseDown="TitleBar_MouseDown"
        Grid.Row="0" BorderBrush="{DynamicResource BackgroundMuted}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!-- Title in the center/left -->
                <Label Content="Floatly" Foreground="{DynamicResource SecondaryText}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Grid.Column="0"/>
                <!--  HOLY SHI, I CAN MANIPULATE IT LIKE INPUT PLACEHOLDER  -->
                <!-- Minimize button at the right -->
                <Button Content="" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="Minimize_Click" Grid.Column="1">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource SidebarBg}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource AccentPurple}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Border Width="20" Height="20" Background="White" Grid.Column="1" Margin="20,0,20,0" VerticalAlignment="Center" IsHitTestVisible="False">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="/Assets/Images/icon-minimize.png"/>
                    </Border.OpacityMask>
                </Border>
                <!-- Maximize button at the right -->
                <Button Content="" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="Maximize_Click" Grid.Column="2">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource SidebarBg}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource AccentPurple}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Border Width="20" Height="20" Background="White" Grid.Column="2" Margin="20,0,20,0" VerticalAlignment="Center" IsHitTestVisible="False">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="/Assets/Images/icon-maximize.png"/>
                    </Border.OpacityMask>
                </Border>
                <Button Content="" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="Close_Click" Grid.Column="3">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{DynamicResource SidebarBg}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource AccentRed}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <!-- Close button at the right -->
                <Border Width="20" Height="20" Background="White" Grid.Column="3" Margin="20,0,20,0" VerticalAlignment="Center" IsHitTestVisible="False">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="/Assets/Images/icon-close.png"/>
                    </Border.OpacityMask>
                </Border>
            </Grid>
        </Border>
        <!-- Main Content Grid -->
        <Grid Grid.Row="1" x:Name="Page_Home">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" x:Name="Grid_Main_SideBar"/>
                <ColumnDefinition Width="*" x:Name="Grid_Main_MiddleContent"/>
                <ColumnDefinition Width="370" x:Name="Grid_Main_PlayerCard"/>
            </Grid.ColumnDefinitions>
            <!-- SIDEBAR -->
            <Border Background="{DynamicResource SidebarBg}" BorderBrush="{DynamicResource BackgroundMuted}" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"></RowDefinition>
                            <RowDefinition Height="70"></RowDefinition>
                            <RowDefinition Height="70"></RowDefinition>
                            <RowDefinition Height="70"></RowDefinition>
                            <RowDefinition Height="70"></RowDefinition>
                            <RowDefinition Height="70"></RowDefinition>
                            <RowDefinition Height="70"></RowDefinition>
                            <RowDefinition Height="70"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Rectangle
        Width="150"
        Height="100"
        RadiusX="20"
        RadiusY="20"
                            Margin="0,0,0,20"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
                            <Rectangle.Fill>
                                <ImageBrush Stretch="UniformToFill" ImageSource="/Assets/Images/icon-logo.png"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Button x:Name="NavHome" Content="" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="Nav_Click" Grid.Row="1" Margin="0,8,0,8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{DynamicResource AccentIndigo}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="{DynamicResource PrimaryText}" Width="18" Height="18" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                    <Border.OpacityMask>
                                        <ImageBrush ImageSource="/Assets/Images/icon-home.png"/>
                                    </Border.OpacityMask>
                                </Border>
                                <TextBlock Text="Home" Foreground="{DynamicResource PrimaryText}" FontSize="14" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,10,10" IsHitTestVisible="False" FontFamily="/Assets/Fonts/Geist/#Geist"/>
                            </Grid>
                        </StackPanel>
                        <Button x:Name="NavSearch" Content="" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="Nav_Click" Grid.Row="2" Margin="0,8,0,8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Grid.Row="2" VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="{DynamicResource PrimaryText}" Width="18" Height="18" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                    <Border.OpacityMask>
                                        <ImageBrush ImageSource="/Assets/Images/icon-search.png"/>
                                    </Border.OpacityMask>
                                </Border>
                                <TextBlock Text="Search" Foreground="{DynamicResource PrimaryText}" FontSize="14" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,10,10" IsHitTestVisible="False" FontFamily="/Assets/Fonts/Geist/#Geist"/>
                            </Grid>
                        </StackPanel>
                        <Button Content="" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="NotImplemented_Click" Grid.Row="3"  Margin="0,8,0,8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Grid.Row="3" VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="{DynamicResource PrimaryText}" Width="18" Height="18" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                    <Border.OpacityMask>
                                        <ImageBrush ImageSource="/Assets/Images/icon-library.png"/>
                                    </Border.OpacityMask>
                                </Border>
                                <TextBlock Text="Offline Library" Foreground="{DynamicResource PrimaryText}" FontSize="14" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,10,10" IsHitTestVisible="False" FontFamily="/Assets/Fonts/Geist/#Geist"/>
                            </Grid>
                        </StackPanel>
                        <Button Content="" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="NotImplemented_Click" Grid.Row="4"  Margin="0,8,0,8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Grid.Row="4" VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="{DynamicResource PrimaryText}" Width="18" Height="18" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                    <Border.OpacityMask>
                                        <ImageBrush ImageSource="/Assets/Images/icon-playlist.png"/>
                                    </Border.OpacityMask>
                                </Border>
                                <TextBlock Text="Playlist" Foreground="{DynamicResource PrimaryText}" FontSize="14" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,10,10" IsHitTestVisible="False" FontFamily="/Assets/Fonts/Geist/#Geist"/>
                            </Grid>
                        </StackPanel>
                        <Button Content="" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="NotImplemented_Click" Grid.Row="5"  Margin="0,8,0,8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Grid.Row="5" VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="{DynamicResource PrimaryText}" Width="18" Height="18" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                    <Border.OpacityMask>
                                        <ImageBrush ImageSource="/Assets/Images/icon-settings.png"/>
                                    </Border.OpacityMask>
                                </Border>
                                <TextBlock Text="Settings" Foreground="{DynamicResource PrimaryText}" FontSize="14" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,10,10" IsHitTestVisible="False" FontFamily="/Assets/Fonts/Geist/#Geist"/>
                            </Grid>
                        </StackPanel>
                        <Button Content="" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="NotImplemented_Click" Grid.Row="6"  Margin="0,8,0,8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Grid.Row="6" VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="{DynamicResource PrimaryText}" Width="18" Height="18" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                    <Border.OpacityMask>
                                        <ImageBrush ImageSource="/Assets/Images/icon-debug.png"/>
                                    </Border.OpacityMask>
                                </Border>
                                <TextBlock Text="Debug Menu" Foreground="{DynamicResource PrimaryText}" FontSize="14" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,10,10" IsHitTestVisible="False" FontFamily="/Assets/Fonts/Geist/#Geist"/>
                            </Grid>
                        </StackPanel>
                        <Button Content="" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="NotImplemented_Click" Grid.Row="7"  Margin="0,8,0,8">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <StackPanel Grid.Row="7" VerticalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="{DynamicResource PrimaryText}" Width="18" Height="18" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                    <Border.OpacityMask>
                                        <ImageBrush ImageSource="/Assets/Images/icon-logout.png"/>
                                    </Border.OpacityMask>
                                </Border>
                                <TextBlock Text="Exit" Foreground="{DynamicResource PrimaryText}" FontSize="14" Grid.Column="1" VerticalAlignment="Center" Margin="0,10,10,10" IsHitTestVisible="False" FontFamily="/Assets/Fonts/Geist/#Geist"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    
                </StackPanel>
            </Border>
            <!-- MAIN ITEM CONTENT -->
            <Grid Grid.Column="1" Grid.Row="1" Background="{DynamicResource BackgroundDark}" x:Name="PanelHome">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <!-- Greeting -->
                    <RowDefinition Height="*"/>
                    <!-- Scrollable content -->
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Welcome" Margin="20,10,0,0" Foreground="{DynamicResource PrimaryText}" x:Name="Label_Greeting" FontSize="36" VerticalAlignment="Center" FontFamily="/Assets/Fonts/Geist/#Geist" FontWeight="Bold"/>
                    <Button x:Name="Btn_ShowPlayerCard" Content="" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="UnCollapsePlayerCard_Click" Grid.Column="1" Visibility="Collapsed">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource AccentDeepIndigo}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <!-- Close button at the right -->
                    <Border x:Name="Ico_ShowPlayerCard" Width="40" Height="40" Background="{DynamicResource SecondaryText}" Grid.Column="3" Margin="20,0,20,0" VerticalAlignment="Center" IsHitTestVisible="False" Visibility="Collapsed">
                        <Border.OpacityMask>
                            <ImageBrush ImageSource="/Assets/Images/icon-arrow-left.png"/>
                        </Border.OpacityMask>
                    </Border>
                </Grid>
                <Border Background="{DynamicResource BackgroundDark}" Grid.Row="1" BorderBrush="{DynamicResource BackgroundMuted}" BorderThickness="0,1,0,0">
                    <StackPanel>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Content="Popular Songs" Foreground="{DynamicResource PrimaryText}" FontWeight="Bold" FontSize="23" FontFamily="/Assets/Fonts/Geist/#Geist" Margin="20,20,0,0" Grid.Row="0" Grid.Column="0"></Label>
                                <Label Content="Popular Artist" Foreground="{DynamicResource PrimaryText}" FontWeight="Bold" FontSize="23" FontFamily="/Assets/Fonts/Geist/#Geist" Margin="20,20,0,0" Grid.Row="0" Grid.Column="1"></Label>
                                <ScrollViewer x:Name="SCV_Home"  VerticalScrollBarVisibility="Auto" Grid.Column="0" Grid.Row="1" Margin="20">
                                    <ItemsControl x:Name="SongList_Home" AlternationCount="9999">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Click="SongButton_Click" HorizontalContentAlignment="Stretch" Margin="10,0,10,0">
                                                    <Grid IsHitTestVisible="False">
                                                        <Grid.ColumnDefinitions>
                                                            
                                                            <ColumnDefinition Width="20"/>
                                                            <!-- Id -->
                                                            <ColumnDefinition Width="40"/>
                                                            <!-- Cover -->
                                                            <ColumnDefinition Width="*"/>
                                                            <!-- Title + Artist -->
                                                            <ColumnDefinition Width="Auto"/>
                                                            <!-- Plays + Duration -->
                                                        </Grid.ColumnDefinitions>
                                                        <Rectangle MinHeight="40" MinWidth="40" RadiusX="5" RadiusY="5" Stretch="UniformToFill"  VerticalAlignment="Center" IsHitTestVisible="False" Grid.Column="1" HorizontalAlignment="Center">
                                                            <!-- or desired width -->
                                                            <Rectangle.Fill>
                                                                <ImageBrush Stretch="Fill" ImageSource="{Binding Cover}" />
                                                            </Rectangle.Fill>
                                                        </Rectangle>
                                                        <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" Margin="10" MinWidth="3000">
                                                            <TextBlock Text="{Binding Title}" 
    FontWeight="SemiBold"
    FontSize="18"
    Foreground="{DynamicResource PrimaryText}"/>
                                                            <TextBlock Text="{Binding Artist}" 
    FontSize="14"
    Foreground="{DynamicResource SecondaryText}"/>
                                                        </StackPanel>

                                                        <!-- Plays + Duration aligned right -->
                                                        <Grid Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>

                                                            <Label Grid.Column="0"
Content="{Binding PlayCount}"
                                                FontSize="14"
Foreground="{DynamicResource SecondaryText}"
VerticalAlignment="Center"
Margin="0,0,10,0"/>
                                                            <!-- spacing -->

                                                            <Label Grid.Column="1"
Content="{Binding SongLength}"
Foreground="{DynamicResource SecondaryText}"
                                                 FontSize="14"
VerticalAlignment="Center"/>
                                                        </Grid>

                                                    </Grid>
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                <ScrollViewer x:Name="SCV_HomeArtist"  VerticalScrollBarVisibility="Auto" Grid.Column="1" Grid.Row="1" Margin="20">
                                    <ItemsControl x:Name="ArtistList" AlternationCount="9999">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Click="SongButton_Click" HorizontalContentAlignment="Stretch" Margin="10,20,10,0" MinWidth="250" Padding="0,0,0,0">
                                                    <Grid IsHitTestVisible="False">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <!-- Id -->
                                                            <ColumnDefinition Width="160"/>
                                                            <!-- Cover -->
                                                        </Grid.ColumnDefinitions>
                                                        <Rectangle MinHeight="80" MinWidth="80" RadiusX="100" RadiusY="100" Stretch="UniformToFill"  VerticalAlignment="Center" IsHitTestVisible="False" Grid.Column="0" HorizontalAlignment="Center">
                                                            <!-- or desired width -->
                                                            <Rectangle.Fill>
                                                                <ImageBrush Stretch="Fill" ImageSource="{Binding CoverUrl}" />
                                                            </Rectangle.Fill>
                                                        </Rectangle>
                                                        <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" Margin="10">
                                                            <TextBlock Text="{Binding Name}" 
    FontWeight="SemiBold"
    FontSize="18"
    Foreground="{DynamicResource PrimaryText}"/>
                                                            <TextBlock Text="{Binding TotalPlays}" 
    FontSize="14"
    Foreground="{DynamicResource SecondaryText}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}">
                                                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource AccentPurpleHover}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                            <Label Content="Popular Album" Foreground="{DynamicResource PrimaryText}" FontWeight="Bold" FontSize="23" FontFamily="/Assets/Fonts/Geist/#Geist" Margin="20,0,0,0" Grid.Row="1" Grid.Column="0"></Label>
                            <Grid Grid.Row="2">
                                <ScrollViewer x:Name="SCV_HomeAlbum"
              HorizontalScrollBarVisibility="Disabled"
              VerticalScrollBarVisibility="Disabled"  Margin="20,0,20,0">
                                    <ItemsControl x:Name="AlbumList" AlternationCount="9999" >
                                        <!-- Set horizontal panel -->
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Button Click="SongButton_Click" HorizontalContentAlignment="Stretch" Margin="5">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}">
                                                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="#8b5cf6"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <Grid IsHitTestVisible="False">
                                                        <Grid MinHeight="100" MinWidth="220"
      VerticalAlignment="Center" HorizontalAlignment="Center">
                                                            <!-- Image -->
                                                            <Rectangle RadiusX="5" RadiusY="5">
                                                                <Rectangle.Fill>
                                                                    <ImageBrush Stretch="UniformToFill" ImageSource="{Binding CoverUrl}" />
                                                                </Rectangle.Fill>
                                                            </Rectangle>

                                                            <!-- Dark overlay -->
                                                            <Rectangle RadiusX="5" RadiusY="5" Fill="Black" Opacity="0.4" IsHitTestVisible="False"/>
                                                        </Grid>

                                                        <StackPanel  Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="200">
                                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="18" Foreground="{DynamicResource PrimaryText}">
                                                                <TextBlock.Effect>
                                                                    <DropShadowEffect Color="Black"
                          BlurRadius="0"
                          ShadowDepth="3"
                          Opacity="4"
                          RenderingBias="Quality" />
                                                                </TextBlock.Effect>
                                                            </TextBlock>
                                                            <TextBlock Text="{Binding TotalPlays}" FontSize="14" Foreground="{DynamicResource PrimaryText}">
                                                                <TextBlock.Effect>
                                                                    <DropShadowEffect Color="Black"
BlurRadius="0"
ShadowDepth="3"
Opacity="4"
RenderingBias="Quality" />
                                                                </TextBlock.Effect>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Grid>
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                            </Grid>
                        </Grid>
                    <!-- Content Area -->
                        
                    
                    </StackPanel>
                </Border>

            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" Background="{DynamicResource BackgroundDark}" x:Name="PanelOnline" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <!-- Greeting -->
                    <RowDefinition Height="*"/>
                    <!-- Scrollable content -->
                </Grid.RowDefinitions>

                <TextBlock Text="Welcome" Margin="20,10,0,0" Foreground="{DynamicResource PrimaryText}" x:Name="Label_Search" FontSize="36" VerticalAlignment="Center" FontFamily="/Assets/Fonts/Geist/#Geist" FontWeight="Bold"/>
                <Border Background="{DynamicResource BackgroundDark}" Grid.Row="1" BorderBrush="{DynamicResource BackgroundMuted}" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <Label Content="Popular Tracks" Foreground="{DynamicResource PrimaryText}" FontWeight="Bold" FontSize="23" FontFamily="/Assets/Fonts/Geist/#Geist" Margin="20,20,0,0"></Label>
                    <!-- Content Area -->
                    <ScrollViewer x:Name="scrollview2"  VerticalScrollBarVisibility="Auto" Margin="20">
                            <ItemsControl x:Name="SongList2" AlternationCount="9999">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Click="SongButton_Click" HorizontalContentAlignment="Stretch" Margin="10,0,10,0">
                                        <Grid IsHitTestVisible="False">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="30"/>
                                                    <!-- Id -->
                                                    <ColumnDefinition Width="70"/>
                                                    <!-- Cover -->
                                                    <ColumnDefinition Width="*"/>
                                                    <!-- Title + Artist -->
                                                    <ColumnDefinition Width="Auto"/>
                                                    <!-- Plays + Duration -->
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Text="{Binding Id}"  FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource SecondaryText}"></TextBlock>
                                                   
                                            <Rectangle Height="40" Width="40" RadiusX="5" RadiusY="5" Stretch="UniformToFill"  VerticalAlignment="Center" IsHitTestVisible="False" Grid.Column="1" HorizontalAlignment="Center">
                                                <!-- or desired width -->
                                                <Rectangle.Fill>
                                                    <ImageBrush Stretch="Fill" ImageSource="{Binding Image}" />
                                                </Rectangle.Fill>
                                            </Rectangle>
                                                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center" Margin="10" MinWidth="3000">
                                                    <TextBlock Text="{Binding Title}" 
               FontWeight="SemiBold"
               FontSize="18"
               Foreground="{DynamicResource PrimaryText}"/>
                                                    <TextBlock Text="{Binding Artist}" 
               FontSize="14"
               Foreground="{DynamicResource SecondaryText}"/>
                                                </StackPanel>

                                                <!-- Plays + Duration aligned right -->
                                                <Grid Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Label Grid.Column="0"
           Content="{Binding MusicPlays}"
                                                           FontSize="14"
           Foreground="{DynamicResource SecondaryText}"
           VerticalAlignment="Center"
           Margin="0,0,10,0"/>
                                                    <!-- spacing -->

                                                    <Label Grid.Column="1"
           Content="{Binding MusicLength}"
           Foreground="{DynamicResource SecondaryText}"
                                                            FontSize="14"
           VerticalAlignment="Center"/>
                                                </Grid>

                                            </Grid>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="{StaticResource BackgroundDark}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#8b5cf6"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    </StackPanel>
                </Border>

            </Grid>
            <!-- PLAYER CARD-->
            <Border Background="{DynamicResource BackgroundSecondary}" Grid.Row="1" Grid.Column="2" BorderBrush="{DynamicResource BackgroundMuted}" BorderThickness="1,0,0,0" Name="PlayerCard">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" BorderBrush="{DynamicResource BackgroundMuted}" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Now Playing.." Foreground="{DynamicResource PrimaryText}" FontSize="24" VerticalAlignment="Center" Margin="20" Grid.Column="0"/>
                            <Button Content="" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="CollapsePlayerCard_Click" Grid.Column="1" Margin="0,0,0,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{DynamicResource Tranparent}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource AccentDeepIndigo}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <!-- Close button at the right -->
                            <Border Width="20" Height="20" Background="White" Grid.Column="3" Margin="20,0,20,0" VerticalAlignment="Center" IsHitTestVisible="False">
                                <Border.OpacityMask>
                                    <ImageBrush ImageSource="/Assets/Images/icon-close.png"/>
                                </Border.OpacityMask>
                            </Border>
                        </Grid>
                    </Border>
                    <!-- Now Playing -->
                    <StackPanel  Margin="25" Grid.Row="1">
                        <Rectangle Height="243" RadiusX="16" RadiusY="16" Margin="0,0,0,15" HorizontalAlignment="Center" Width="320">
                            <!-- or desired width -->
                            <Rectangle.Fill>
                                <ImageBrush Stretch="UniformToFill" ImageSource="{Binding Banner}"/>
                            </Rectangle.Fill>
                        </Rectangle>

                        <TextBlock x:Name="Label_SongTitle" Text="{Binding Title}" Foreground="{DynamicResource PrimaryText}" FontSize="24" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/Geist/#Geist" Margin="0,0,0,10"/>
                        <TextBlock x:Name="Label_ArtistName" Text="{Binding Artist}" Foreground="{DynamicResource PrimaryText}" FontSize="16" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/Geist/#Geist" FontWeight="Light" Margin="0,0,0,10"/>
                        <StackPanel Margin="0,10,0,0">
                            <Grid HorizontalAlignment="Stretch" Height="85">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Button Content="" Width="40" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="NotImplemented_Click" Grid.Column="0">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource AccentPurple}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <!-- Shuffle button -->
                                        <Border Background="White" Width="20" Height="20" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                            <Border.OpacityMask>
                                                <ImageBrush ImageSource="/Assets/Images/icon-shuffle.png"/>
                                            </Border.OpacityMask>
                                        </Border>
                                        <!-- Previous Button -->
                                        <Button Content="" Width="40" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="NotImplemented_Click" Grid.Column="1">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource AccentPurple}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Border Background="White" Width="20" Height="20" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                            <Border.OpacityMask>
                                                <ImageBrush ImageSource="/Assets/Images/icon-prev.png"/>
                                            </Border.OpacityMask>
                                        </Border>
                                        <Button Content="" Width="40" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="Button_PlayPause_Click" Grid.Column="2">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource AccentPurple}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Border Background="White" Width="20" Height="20" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                            <Border.OpacityMask>
                                                <ImageBrush ImageSource="/Assets/Images/icon-resume.png"/>
                                            </Border.OpacityMask>
                                        </Border>
                                        <Button Content="" Width="40" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="NotImplemented_Click" Grid.Column="3">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource AccentPurple}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Border Background="White" Width="20" Height="20" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                            <Border.OpacityMask>
                                                <ImageBrush ImageSource="/Assets/Images/icon-next.png"/>
                                            </Border.OpacityMask>
                                        </Border>
                                        <Button Content="" Width="40" Height="40" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="NotImplemented_Click" Grid.Column="4">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource AccentPurple}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                        <Border Background="White" Width="20" Height="20" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                            <Border.OpacityMask>
                                                <ImageBrush ImageSource="/Assets/Images/icon-loop.png"/>
                                            </Border.OpacityMask>
                                        </Border>
                                    </Grid>
                                    
                                </StackPanel>
                                

                                <TextBlock Text="00:00" x:Name="Label_CurrentTime" Foreground="{DynamicResource PrimaryText}" FontSize="14" HorizontalAlignment="Left" Margin="0,0,10,0" VerticalAlignment="Center" Grid.Row="1"/>
                                <TextBlock Text="00:00" x:Name="Label_TotalTime" Foreground="{DynamicResource PrimaryText}" FontSize="14" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Grid.Row="1"/>
                            </Grid>
                            <!-- Bit Buggy on Slider-->
                            <Slider x:Name="Slider_Progress"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="320"
                                   Height="16"
        Minimum="0"
        Maximum="100"
        ValueChanged="Slider_Progress_ValueChanged"
        PreviewMouseDown="Slider_Progress_PreviewMouseDown"
        PreviewMouseUp="Slider_Progress_PreviewMouseUp">

                                <Slider.Resources>
                                    <!-- Thumb: circular -->
                                    <Style TargetType="Thumb">
                                        <Setter Property="Width" Value="14"/>
                                        <Setter Property="Height" Value="14"/>
                                        <Setter Property="Margin" Value="0,-4,0,0"/>
                                        <!-- move up a bit more -->
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Ellipse Fill="Black"
                         Stroke="#6366F1"
                         StrokeThickness="2"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>


                                    <!-- Slider: flat track -->
                                    <Style TargetType="Slider">
                                        <Setter Property="Foreground" Value="#6366F1"/>
                                        <!-- progress bar color -->
                                        <Setter Property="Background" Value="#1F2238"/>
                                        <Setter Property="Margin" Value="0,-18,0,5"/>

                                        <!-- background bar color -->
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Slider">
                                                    <Grid>
                                                        <Track x:Name="PART_Track"
                                   Height="8"
                                   VerticalAlignment="Center">
                                                            <!-- progress (left) -->
                                                            <Track.DecreaseRepeatButton>
                                                                <RepeatButton Background="{TemplateBinding Foreground}"
                                                  BorderThickness="0">
                                                                    <RepeatButton.Template>
                                                                        <ControlTemplate TargetType="RepeatButton">
                                                                            <Border Background="{TemplateBinding Background}"
                                                        Height="6"
                                                        VerticalAlignment="Center"/>
                                                                        </ControlTemplate>
                                                                    </RepeatButton.Template>
                                                                </RepeatButton>
                                                            </Track.DecreaseRepeatButton>
                                                            <!-- background (right) -->
                                                            <Track.IncreaseRepeatButton>
                                                                <RepeatButton Background="{TemplateBinding Background}"
                                                  BorderThickness="0">
                                                                    <RepeatButton.Template>
                                                                        <ControlTemplate TargetType="RepeatButton">
                                                                            <Border Background="{TemplateBinding Background}"
                                                        Height="6"
                                                        VerticalAlignment="Center"/>
                                                                        </ControlTemplate>
                                                                    </RepeatButton.Template>
                                                                </RepeatButton>
                                                            </Track.IncreaseRepeatButton>
                                                            <!-- thumb -->
                                                            <Track.Thumb>
                                                                <Thumb/>
                                                            </Track.Thumb>
                                                        </Track>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Slider.Resources>
                            </Slider>
                        </StackPanel>
                        <Border BorderBrush="{DynamicResource BackgroundMuted}" BorderThickness="3" CornerRadius="10" Height="125">
                            <TextBlock x:Name="Label_ActiveLyrics" Text="Lyrics heree..." Foreground="{DynamicResource PrimaryText}" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" MouseLeftButtonDown="Label_ActiveLyrics_MouseLeftButtonDown"/>
                        </Border>
                        <!-- Additional Artist Card -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Rectangle Width="Auto" Height="150" Grid.Row="1">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/Images/banner-default.jpg"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Rectangle Height="80" Width="Auto" Grid.Row="4">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/Images/banner-default.jpg"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Grid>
                    </StackPanel>
                </Grid>
                
            </Border>
        </Grid>
    </Grid>
</Window>