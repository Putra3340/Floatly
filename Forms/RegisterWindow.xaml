<Window x:Class="Floatly.RegisterWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="450"
        Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="20" Background="{StaticResource BackgroundDark}" BorderBrush="Transparent" BorderThickness="1" Padding="20">
        <StackPanel VerticalAlignment="Center">
            <Label Content="X" FontWeight="Bold" FontSize="20" HorizontalAlignment="Right" Foreground="{StaticResource PrimaryText}" Margin="0,0,0,10" MouseDown="CloseLogin_MouseDown">

            </Label>
            <TextBlock Text="Register your account!" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"
                       Foreground="{StaticResource PrimaryText}"/>

            <!-- Username -->
            <Border CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Background="{StaticResource BackgroundDark}" Margin="0,0,0,20">
                <Grid>
                    <TextBox x:Name="UsernameBox"
                         Padding="10"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="{StaticResource PrimaryText}"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         TextChanged="UsernameBox_TextChanged"
                         CaretBrush="White"
                         />
                    <TextBlock x:Name="UsernamePlaceholder"
                   Text="Username"
                   Foreground="Gray"
                   Margin="10,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"/>
                </Grid>
            </Border>
            <Border CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Background="{StaticResource BackgroundDark}" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="EmailBox"
                         Padding="10"
                         BorderThickness="0"
                         Background="Transparent"
                         Foreground="{StaticResource PrimaryText}"
                         FontSize="14"
                         VerticalContentAlignment="Center"
                         TextChanged="EmailBox_TextChanged"
                         CaretBrush="White"
                             Grid.Column="0"
                         />
                    <TextBlock x:Name="EmailPlaceholder"
                   Text="Email address"
                   Foreground="Gray"
                   Margin="10,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"
                               Grid.Column="0"/>
                    <Button Content="Verify"
        Foreground="White"
        FontWeight="SemiBold"
        BorderThickness="0"
        Cursor="Hand"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Grid.Column="1" Click="Verify_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource AccentPurple}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#8b5cf6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Password -->
            <Border CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Background="{StaticResource BackgroundDark}" Margin="0,0,0,20">
                <Grid>
                    <PasswordBox x:Name="PasswordBox"
                             Padding="10"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="{StaticResource PrimaryText}"
                             FontSize="14"
                             CaretBrush="White"
                             VerticalContentAlignment="Center"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             />
                    <TextBlock x:Name="PasswordPlaceholder"
                   Text="Password"
                   Foreground="Gray"
                   Margin="10,0,0,0"
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Login button -->
            <Button Content="Register"
                    Height="40"
                    Margin="0,10,0,20"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="RegisterAccount_MouseDown"
                    >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{StaticResource AccentPurple}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#8b5cf6"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border Grid.Column="0" HorizontalAlignment="Left">
                    <TextBlock Text="Back to login" Foreground="{StaticResource AccentPurple}" Cursor="Hand" MouseDown="BackToLogin_MouseDown"/>
                </Border>
                <Border Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="Forgot password?" Foreground="{StaticResource AccentPurple}" Cursor="Hand" MouseDown="ForgotPassword_MouseDown"/>
                </Border>
                <Border Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" Margin="0,20,0,0" Visibility="Collapsed">
                    <TextBlock Text="Stay logged out" Foreground="Gray" Cursor="Hand" MouseDown="AnonymousLogin_MouseDown"/>
                </Border>
            </Grid>
        </StackPanel>
    </Border>
</Window>
