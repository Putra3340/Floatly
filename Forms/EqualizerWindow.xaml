<Window x:Class="Floatly.Forms.EqualizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Equalizer"
        Height="420"
        Width="760"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundDark}"
        ResizeMode="NoResize">

    <Border CornerRadius="16" Padding="24" Background="{DynamicResource BackgroundSecondary}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Equalizer"
                       FontSize="26"
                       FontWeight="SemiBold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>

            <!-- Sliders -->
            <UniformGrid Grid.Row="1" Columns="10">
                <StackPanel>
                    <TextBlock Text="32Hz" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="64Hz" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="125Hz" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="250Hz" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="500Hz" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="1K" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="2K" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="4K" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="8K" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="16K" Foreground="#AAAAAA" FontSize="11" HorizontalAlignment="Center"/>
                    <Slider Orientation="Vertical" Minimum="-12" Maximum="12" Value="0" Height="200"/>
                </StackPanel>
            </UniformGrid>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Content="Reset" Width="90" Margin="0,0,12,0"/>
                <Button Content="Apply" Width="90"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
