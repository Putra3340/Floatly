<Window x:Class="Floatly.Forms.UniversalInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Floatly.Forms"
        mc:Ignorable="d"
        Title="Login"
Height="140"
Width="800"
        WindowStartupLocation="CenterOwner"
WindowStyle="None"
AllowsTransparency="True" ResizeMode="NoResize" Background="Transparent">
    <Border CornerRadius="20" Background="{StaticResource BackgroundDark}" BorderBrush="Transparent" BorderThickness="1" Padding="20,0,20,0">
        <StackPanel VerticalAlignment="Top">
            <Grid Margin="0,0,0,20">
                <Border x:Name="Icon_CollapsePlayerCard" Width="40" Height="40" Background="White" VerticalAlignment="Center" HorizontalAlignment="Right" MouseDown="Cancel_MouseDown">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="/Assets/Images/icon-close.png"/>
                    </Border.OpacityMask>
                </Border>
                <TextBlock Text="Title Template" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,10,0,0"
                   Foreground="{StaticResource PrimaryText}" x:Name="Label_Title"/>

            </Grid>

            <!-- Username -->
            <Border CornerRadius="10" BorderBrush="#CCC" BorderThickness="1" Background="{StaticResource BackgroundDark}" Margin="0,0,0,20">
                <Grid>
                    <TextBox x:Name="UsernameBox"
                     Padding="10"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="{StaticResource PrimaryText}"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     TextChanged="UsernameBox_TextChanged"
                             KeyDown="UsernameBox_KeyDown"
                     CaretBrush="White"
                     />
                    <TextBlock x:Name="UsernamePlaceholder"
               Text="Placeholder Template"
               Foreground="Gray"
               Margin="10,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>
                    <Button x:Name="Btn_Confirm" Style="{StaticResource CustomButtonStyle}" Content="Confirm" Width="100" Height="50" HorizontalAlignment="Right" Background="{DynamicResource AccentIndigo}" Click="Btn_Confirm_Click"/>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</Window>
