<Window x:Class="Floatly.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configuration"
        Height="450"
        Width="800"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Background="Black">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock
            Grid.Row="0"
            Text="Settings"
            FontSize="26"
            FontWeight="SemiBold"
            Foreground="#EAEAEA"
            Margin="0,0,0,20"/>

        <!-- Scrollable Content -->
        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            >
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
            </ScrollViewer.Resources>
            <StackPanel>

                <!-- Server Selection -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock
                        Text="Output Devices"
                        Foreground="#AAAAAA"
                        Margin="0,0,0,6"/>

                    <ComboBox
    x:Name="ServerComboBox"
    Style="{StaticResource DarkComboBoxStyle}"
                        DisplayMemberPath="DeviceName"
                        SelectedValuePath="DeviceName" SelectionChanged="ServerComboBox_SelectionChanged">
                    </ComboBox>
                    
                </StackPanel>
                <StackPanel Margin="0,0,0,20">
                    <TextBlock
                        Text="Output Volume"
                        Foreground="#AAAAAA"
                        Margin="0,0,0,6"/>
                    <Slider x:Name="Slider_Progress"
HorizontalAlignment="Stretch"
VerticalAlignment="Center"
Height="16"
Margin="0,1,0,5"
Minimum="0"
Maximum="100"
ValueChanged="Slider_Progress_ValueChanged"
PreviewMouseDown="Slider_Progress_PreviewMouseDown"
PreviewMouseUp="Slider_Progress_PreviewMouseUp">

                        <Slider.Resources>
                            <!-- Thumb: circular -->
                            <Style TargetType="Thumb">
                                <Setter Property="Width" Value="14"/>
                                <Setter Property="Height" Value="14"/>
                                <Setter Property="Margin" Value="0,-4,0,0"/>
                                <!-- move up a bit more -->
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Thumb">
                                            <Ellipse Fill="Black"
                 Stroke="#6366F1"
                 StrokeThickness="2"/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>


                            <!-- Slider: flat track -->
                            <Style TargetType="Slider">
                                <Setter Property="Foreground" Value="#6366F1"/>
                                <!-- progress bar color -->
                                <Setter Property="Background" Value="#1F2238"/>
                                <Setter Property="Margin" Value="0,-18,0,5"/>

                                <!-- background bar color -->
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Track x:Name="PART_Track"
                           Height="8"
                           VerticalAlignment="Center">
                                                    <!-- progress (left) -->
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Background="{TemplateBinding Foreground}"
                                          BorderThickness="0">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Border Background="{TemplateBinding Background}"
                                                Height="6"
                                                VerticalAlignment="Center"/>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.DecreaseRepeatButton>
                                                    <!-- background (right) -->
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Background="{TemplateBinding Background}"
                                          BorderThickness="0">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Border Background="{TemplateBinding Background}"
                                                Height="6"
                                                VerticalAlignment="Center"/>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.IncreaseRepeatButton>
                                                    <!-- thumb -->
                                                    <Track.Thumb>
                                                        <Thumb/>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Slider.Resources>
                    </Slider>
                </StackPanel>
               
                <!-- Keybind Section -->
                <Border
                    Background="#1A1A1A"
                    CornerRadius="12"
                    Padding="16"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1">

                    <StackPanel>

                        <TextBlock
                            Text="Floating UI Keybinds"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="#EAEAEA"
                            Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                            </Grid.RowDefinitions>

                            <!-- Keybind rows -->
                            <TextBlock Grid.Row="0" Text="Play / Pause" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="CTRL + LSHIFT + SPACE" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Text="Move Direction" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="CTRL + LSHIFT + W/A/S/D" Foreground="#FFFFFF" FontWeight="SemiBold"/>
                            
                            <TextBlock Grid.Row="2" Text="Move Forward 5 Sec" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="CTRL + LSHIFT + Right Arrow" Foreground="#FFFFFF" FontWeight="SemiBold"/>
                            
                            <TextBlock Grid.Row="3" Text="Move Forward 5 Sec" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="CTRL + LSHIFT + Left Arrow" Foreground="#FFFFFF" FontWeight="SemiBold"/>
                            
                            <TextBlock Grid.Row="4" Text="Volume Up" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="CTRL + LSHIFT + Plus" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="5" Text="Volume Down" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="CTRL + LSHIFT + Minus" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="6" Text="Mute" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="CTRL + LSHIFT + M" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="7" Text="Move UI" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="Hold CTRL" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="8" Text="Transparent UI" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Text="Hold Alt" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                        </Grid>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
