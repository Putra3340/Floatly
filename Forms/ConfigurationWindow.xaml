<Window x:Class="Floatly.ConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Configuration"
        Height="450"
        Width="800"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Background="Black">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock
            Grid.Row="0"
            Text="Settings"
            FontSize="26"
            FontWeight="SemiBold"
            Foreground="#EAEAEA"
            Margin="0,0,0,20"/>

        <!-- Scrollable Content -->
        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            >
            <ScrollViewer.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource CustomScrollBarStyle}"/>
            </ScrollViewer.Resources>
            <StackPanel>

                <!-- Server Selection -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock
                        Text="Server"
                        Foreground="#AAAAAA"
                        Margin="0,0,0,6"/>

                    <ComboBox
    x:Name="ServerComboBox"
    Style="{StaticResource DarkComboBoxStyle}"
                        DisplayMemberPath="Name"
                        SelectedValuePath="Name">
                    </ComboBox>

                </StackPanel>

                <!-- Keybind Section -->
                <Border
                    Background="#1A1A1A"
                    CornerRadius="12"
                    Padding="16"
                    BorderBrush="#2A2A2A"
                    BorderThickness="1">

                    <StackPanel>

                        <TextBlock
                            Text="Keybinds"
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="#EAEAEA"
                            Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="36"/>
                            </Grid.RowDefinitions>

                            <!-- Keybind rows -->
                            <TextBlock Grid.Row="0" Text="Play / Pause" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="F1" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="1" Text="Next Track" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="F2" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="2" Text="Previous Track" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="F3" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="3" Text="Volume Up" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="F4" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="4" Text="Volume Down" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="F5" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="5" Text="Mute" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="F6" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="6" Text="Toggle UI" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="F7" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="7" Text="Open Settings" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="F8" Foreground="#FFFFFF" FontWeight="SemiBold"/>

                        </Grid>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
